<h1>Products</h1>

<div id="product-container">
  {{#each allProducts}}
  <div>
  <div class="cardContainer">
            <h2>{{title}}</h2>
            <p class="category">{{category}}</p>
            <div class="imgContainer" >
            <img  src="{{thumbnail}}" alt="{{title}}">
            </div>
            <p class="description">{{description}}</p>
            <p class="price">$ {{price}}</p>
          </div>
  </div>
  {{/each}}
</div>

